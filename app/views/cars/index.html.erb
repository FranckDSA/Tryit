<h1>Cars</h1>
<p><% @cars.each do |car| %></p>
<%= car.model %>
<%= car.description %>
<% end %>

<div class="container">
    <div class="cards">
    <% @cars.each do |car|%>
      <% if car.photos.attached? %>
        <div class="card-category" style="background-image: linear-gradient(rgba(100,100,100,0.3), rgba(100,100,100,0.3)), url('<%= cl_image_path car.photos.first.key, :cloud_name => "dcbecmbrj", crop: :fill %>')">
      <% else %>
        <div class="card-category">
      <% end %>
        <%= link_to car.model, car_path(car), class:"card-category-text" %>
      </div>
    <% end %>
    </div>
</div>
