
<div class="container">
  <div class="row">
    <div class="col-6 form-group form-inline">
      <%= form_tag cars_path, method: :get do %>
      <%= text_field_tag :category, params[:category], class: "form-control", placeholder: "Urban" %>
      <%= select_tag :category, options_for_select(["family", "sports", "urban", "vintage"], class: "form-control") %>
      <p class="fas fa-search"></p>
      <%= submit_tag "Search", class: "btn btn-flat" %>
      <% end %>
    </div>
  </div>
</div>
