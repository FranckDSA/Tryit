<div class="navbar navbar-expand-sm navbar-light navbar-lewagon-fixed">

    <div class="brand">
      <h1><%= link_to "TryIt!__", root_path %></h1>
      <p>&nbsp</p>
      <div>
        <%= link_to "", root_path, class: "navbar-brand fas fa-car-side" %>
      </div>
    </div>


  <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarSupportedContent" aria-controls="navbarSupportedContent" aria-expanded="false" aria-label="Toggle navigation">
    <span class="navbar-toggler-icon"></span>
  </button>


  <div class="collapse navbar-collapse" id="navbarSupportedContent">
    <ul class="navbar-nav mr-auto">
      <% if user_signed_in? %>

        <div class="cartouche">
          <div>
            <li class="nav-item">
              <p><%= link_to "My Dashboard", "#", class: "nav-link" %></p>
            </li>
          </div>
          <div>
            <li class="nav-item dropdown">
              <%= cl_image_tag current_user.photo.key, class: "avatar dropdown-toggle", id: "navbarDropdown", data: { toggle: "dropdown" }, 'aria-haspopup': true, 'aria-expanded': false %>
              <div class="dropdown-menu dropdown-menu-right" aria-labelledby="navbarDropdown">
                <%= link_to "My Dashboard", "#", class: "dropdown-item" %>
                <%= link_to "Add a car", "#", class: "dropdown-item" %>
                <%= link_to "Log out", destroy_user_session_path, method: :delete, class: "dropdown-item" %>
              </div>
            </li>
          </div>
        </div>

      <% else %>
        <div class="cartouche">
          <div>
            <li class="nav-item">
              <%= link_to "Login", new_user_session_path, class: "nav-link" %>
            </li>
          </div>

          <div>
            <li class="nav-item dropdown">
              <%= cl_image_tag "https://kitt.lewagon.com/placeholder/users/ssaunier", class: "avatar dropdown-toggle", id: "navbarDropdown", data: { toggle: "dropdown" }, 'aria-haspopup': true, 'aria-expanded': false %>
              <div class="dropdown-menu dropdown-menu-right" aria-labelledby="navbarDropdown">
                <%= link_to "Subscribe", "#", class: "dropdown-item" %>
                <%= link_to "About", "#", class: "dropdown-item" %>
              </div>
            </li>
          </div>
        </div>

      <% end %>
    </ul>
  </div>
</div>
